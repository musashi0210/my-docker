# Set default values for all following accounts.
defaults
auth on
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
aliases /etc/aliases
logfile -

# Gmail
account yok
host mail.domain.example
port 587
from noreply@domain.example
user noreply
password hogehoge

# set a default account
account default : yok
